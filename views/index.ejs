<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("./partials/headMeta.ejs") %>
</head>
<body>
    <%- include("./partials/header.ejs") %>
    <div class="link-container">
        <a href="/new" class="link">
            Send a Message
        </a>
    </div>
    <main>
        <div class="messages">
            <% messages.forEach(message => { %>
                <div class="message-container">
                    <h2 class="message-sender">
                        <%= message.user %>
                    </h2>
                    <p class="message-text">
                        <%= message.text %>
                    </p>
                    <div class="timestamp">
                        <p class="message-date">
                            <%= message.added.toLocaleDateString() %>
                        </p>
                        <p class="message-time">
                            <%= message.added.toLocaleTimeString() %>
                        </p>
                    </div>
                </div>
            <% }) %>
        </div>
    </main>
</body>
</html>